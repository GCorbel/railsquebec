.logreg
  .logreg-page
    %h3= t('.forgot_your_password', :default => 'Forgot your password?')
    %hr/
    = simple_form_for(resource,
        as: resource_name,
        url: password_path(resource_name),
          html: { method: :post }) do |f|
      = f.input :email
      = f.button :submit, t('.send_me_reset_password_instructions', :default => "Send me reset password instructions")
    = render "devise/shared/links"
