.accordion-group
  .accordion-heading
    %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse#{event.id}"}
      %h5
        =event.title
    %div{:id => "collapse#{event.id}", class: "accordion-body collapse"}
      .accordion-inner
        / Para
        %span
          %i.icon-calendar
          = t('.date', date: event.date.strftime("%Y-%m-%d"))
          %i.icon-home
          = t('.location', city: event.city)
        %p= raw(markdown(excerpt(event.description)))
        = link_to t('shared.read_more'), event
