!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Railsquebec"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="images/favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") RailsQuebec
          .container.nav-collapse
            %ul.nav
              %li= link_to "Events",  events_path
              %li= link_to "Jobs",    jobs_path
              %li= link_to "Members", users_path
              %li= link_to "Map",     maps_path
            %ul.nav.pull-right
              -if current_user
                %li= link_to "Sign out",
                        destroy_user_session_path,
                        method: :delete
                %li= link_to "Edit my account",
                        edit_user_registration_path(current_user)
                %li= link_to "Delete my account",
                        "/users",
                        method: :delete,
                        data: { confirm: "Are you sure?" }
              -else
                %li= link_to "Log In", new_user_session_path
                %li= link_to "Sign In", new_user_registration_path

    .container-fluid

      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Latest events
              - EventPresenter.latest(5).each do |event|
                %li= link_to event.title, event
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Latest jobs
              - JobPresenter.latest(5).each do |job|
                %li= link_to job.post_name, job
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Latest members
              - UserPresenter.latest(5).each do |user|
                %li= link_to user
        .span9
          = alert_box("success", flash[:notice])
          = alert_box("error", flash[:error])
          = alert_box("alert", flash[:alert])
          = yield

      %footer
        %p &copy; RailsQuebec 2013
    = javascript_include_tag "application"
