.well
  #userPage
    .avatar= raw(image_tag(avatar_url(@user)))
    .userDescriptionLeft
      %p= t('.username', username: @user)
      = email_for(@user)
      = twitter_for(@user)
      = github_for(@user)
      = website_for(@user)
    .userDescriptionRight
      -if @user.city.present?
        %p= t('.city', city: @user.city)
      %p= t('.registration_date', date: @user.created_at.strftime("%Y-%m-%d"))
