.well
  %h1= @event
  %p= "Date : " + @event.date.strftime("%Y-%m-%d")
  %p= "Address : #{@event.street}, #{@event.postal_code}, #{@event.city}"
  - if @event.website.present?
    %p= raw("Website : " + link_to(@event.website, @event.website))
  %p= raw("Description : " + markdown(@event.description))
  .form-actions
    =link_for_delete(@event)
