.well
  %h1= @job.post_name
  %p= t('.company_name', company: @job.company_name)
  %p= raw(t('.email', link: link_to(@job.email, "mailto:#{@job.email}")))
  %p= t('.address',
          street: @job.street,
          postal_code: @job.postal_code,
          city: @job.city)
  - if @job.website.present?
    %p= raw(t('.website', link: link_to(@job.website, @job.website)))
  %p= raw(markdown(@job.description))
  %p= t('.creation_date', date: @job.created_at.strftime("%Y-%m-%d"))
  =form_actions_for(@job)
